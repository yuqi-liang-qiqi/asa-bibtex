\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{biblatex-asa}[2025/01/07 v1.0.0 ASA citation style for biblatex]

% Package options
\newif\ifasa@giveninits
\asa@giveninitstfalse  % Default: use full given names (ASA style)

\DeclareOption{giveninits}{\asa@giveninitstrue}
\DeclareOption{nogiveninits}{\asa@giveninitstfalse}
\DeclareOption{backend=biber}{\PassOptionsToPackage{backend=biber}{biblatex}}
\DeclareOption{backend=bibtex}{\PassOptionsToPackage{backend=bibtex}{biblatex}}
\DeclareOption*{\PassOptionsToPackage{\CurrentOption}{biblatex}}

\ProcessOptions\relax

% Load biblatex with ASA style
\RequirePackage{biblatex}

% Set biblatex options for ASA style
\ExecuteBibliographyOptions{
  style=asa,
  giveninits=\ifasa@giveninits true\else false\fi,
  autocite=inline,
  autopunct=true,
  labeldateparts=true,
  uniquename=full,
  uniquelist=false,
  maxnames=2,
  minnames=1,
  maxcitenames=2,
  mincitenames=1
}



\endinput
